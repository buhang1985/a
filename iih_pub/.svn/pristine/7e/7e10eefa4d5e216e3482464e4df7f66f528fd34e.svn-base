package iih.mp.dg.i.external.provide;

import xap.mw.core.data.BizException;

/**
 * 药品执行域提供给基础数据域的服务接口
 * 
 * @author dj.zhang 2018年8月17日
 *
 */
public interface IMpDgBdService {

	/**
	 * 药房窗口上线
	 * 
	 * @param siteId
	 * @throws BizException
	 */
	public abstract void pharmacyWindowOnLine(String siteId) throws BizException;

	/**
	 * 药房窗口下线
	 * 
	 * @param siteId
	 * @throws BizException
	 */
	public abstract void pharmacyWindowOffLine(String siteId) throws BizException;

	/**
	 * 药房窗口暂停
	 * 
	 * @param siteId
	 * @throws BizException
	 */
	public abstract void pharmacyWindowPause(String siteId) throws BizException;
}
